<div class="container-fluid">

  <div class="row ml-5 mt-5">
    <h2 class="ml-3 badge-light">会員情報編集</h2>
  </div>

  <%= form_with model: @member, url: members_mypage_path, local: true do |f| %>
  <div class="row m-4">
    <div class ="mx-4 my-auto"><%= f.label :氏名　　　%></div>
    <div class ="mx-4 my-auto"><%= f.text_field :family_name, size: "40" %></div>
    <div class ="mx-4 my-auto"><%= f.text_field :first_name, size: "40" %></div>
  </div>
  <div class="row m-4">
    <div class ="mx-4 my-auto"><%= f.label :フリガナ　　　%></div>
    <div class ="mx-4 my-auto"><%= f.text_field :ruby_family_name, size: "40" %></div>
    <div class ="mx-4 my-auto"><%= f.text_field :ruby_first_name, size: "40" %></div>
  </div>
  <div class="row m-4">
    <div class ="mx-4 my-auto"><%= f.label :郵便番号　　　%></div>
    <div class ="mx-4 my-auto"><%= f.text_field :post_code, size: "40" %></div>
  </div>
  <div class="row m-4">
    <div class ="mx-4 my-auto"><%= f.label :住所　　　%></div>
    <div class ="mx-4 my-auto"><%= f.text_field :address, size: "40" %></div>
  </div>
  <div class="row m-4">
    <div class ="mx-4 my-auto"><%= f.label :電話番号　　　%></div>
    <div class ="mx-4 my-auto"><%= f.text_field :phone_number, size: "40" %></div>
  </div>
  <div class="row m-4">
    <div class ="mx-4 my-auto"><%= f.label :メールアドレス　　　%></div>
    <div class ="mx-4 my-auto"><%= f.text_field :email, size: "40" %></div>
  </div>


  <div stayle = "text-align:center;">
    <div class ="mx-4 my-auto text-center"><%= f.submit '変更を保存', class: "btn btn-success"  %></div>
    <%= link_to '退会する', "/members/out", method: :get, class: "btn btn-danger ml-5"%>
  </div>
  <% end %>
</div>