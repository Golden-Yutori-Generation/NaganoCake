<div class="container-fluid">

  <div class="row ml-5 mt-5">
    <h2 class="ml-3 badge-light">マイページ</h2>
  </div>

  <div>
  <h>登録情報　　</h>
  <%= link_to '編集する',edit_member_path(current_member.id), method: :get, class: "btn btn-success"%>
  </div>

  <div class="border border-dark">
  <p class="badge-light">氏名</p>
  <%=@member.family_name %>
  <%=@member.first_name %>
  <p class="badge-light">カナ</p>
  <%=@member.ruby_family_name %>
  <%=@member.ruby_first_name %>
  <p class="badge-light">郵便番号</p>
  <%=@member.post_code %>
  <p class="badge-light">住所</p>
  <%=@member.address %>
  <p class="badge-light">電話番号</p>
  <%=@member.phone_number %>
  <p class="badge-light">メールアドレス</p>
  <%=@member.email %>
  </div>

  <div>
  <h>配送先　　</h>
  <%= link_to '一覧を見る',edit_member_path(current_member.id), method: :get, class: "btn btn-primary"%>
  </div>

  <div>
  <p>注文履歴　</p>
  <%= link_to '一覧を見る',edit_member_path(current_member.id), method: :get, class: "btn btn-primary"%>
  </div>


</div>