<div class="container">
  <div class="row  ml-5 mt-2">
     <div class="col-6 ml-4 my-auto">
      <h2 class="badge-light col-6 text-center">注文情報確認</h2>
    </div>
  </div>
  <div class="row ml-5 mt-2">
    <div class="col-6 ml-4 my-auto">
      <h4>注文情報</h4>
      <table class="table table-bordered">
        <tr>
          <td class="table-secondary">注文日</td>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <td class="table-secondary">配送先</td>
          <td>
            〒<%= @order.shipping_post_code %>
            <%= @order.shipping_address %>
            <%= @order.shipping_name %>
          </td>
        </tr>
        <tr>
          <td class="table-secondary">支払方法</td>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
          <td class="table-secondary">ステータス</td>
          <td><%= @order.order_status_i18n %></td>
        </tr>
      </table>
    </div>
    <div class="col-4 my-auto">
      <h4>請求情報</h4>
      <table class="table table-bordered">
        <tr>
          <td class="table-secondary">商品合計</td>
          <td>
            <% @order.ordered_items.each do |ordered_item| %>
              <% @total_price += ordered_item.subtotal %>
            <% end %>  
            <%= @total_price.to_s(:delimited) %>
          </td>
        </tr>
        <tr>
          <td class="table-secondary">送料</td>
          <td><%= @order.postage %></td>
        </tr>
        <tr>
          <td class="table-secondary">ご請求額</td>
          <td>
            <%= (@total_price + @order.postage).to_s(:delimited) %>
          </td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row ml-5 mt-2">
    <div class="col-8 ml-4 my-auto">
      <h4>注文内容</h4>
      <table class="table table-bordered">
        <thead class="table-secondary">
          <th>商品</th>
          <th>単価(税込)</th>
          <th>個数</th>
          <th>小計</th>
        </thead>
        <tbody>
          <% @order.ordered_items.each do |ordered_item| %>
            <tr>
              <td><%= ordered_item.item.name %>
              <td><%= ordered_item.with_tax_price.to_s(:delimited) %></td>
              <td><%= ordered_item.amount %></td>
              <td><%= ordered_item.subtotal.to_s(:delimited) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>