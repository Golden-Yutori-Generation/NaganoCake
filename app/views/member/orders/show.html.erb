<h2>注文情報確認</h2>
<h4>注文情報</h4>
<table>
  <tr>
    <td>注文日</td>
    <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
  </tr>
  <tr>
    <td>配送先</td>
    <td>
      〒<%= @order.shipping_post_code %>
      <%= @order.shipping_address %>
      <%= @order.shipping_name %>
    </td>
  </tr>
  <tr>
    <td>支払方法</td>
    <td><%= @order.payment_method_i18n %></td>
  </tr>
  <tr>
    <td>ステータス</td>
    <td><%= @order.order_status_i18n %></td>
  </tr>
</table>

<h4>請求情報</h4>
<table>
  <tr>
    <td>商品合計</td>
    <td></td>
  </tr>
  <tr>
    <td>送料</td>
    <td><%= @order.postage %></td>
  </tr>
  <tr>
    <td>ご請求額</td>
   <td></td>
  </tr>
</table>

<h4>注文内容</h4>
<table>
  <thead>
    <th>商品</th>
    <th>単価(税込)</th>
    <th>個数</th>
    <th>小計</th>
  </thead>
  <tbody>
    <% @order.ordered_items.each do |ordered_item| %>
      <tr>
        <td><%= ordered_item.item.name %>
        <td><%= ordered_item.perchace_price %></td>
        <td><%= ordered_item.amout %></td>
        <td><%= ordered_item.perchace_price * ordered_item.amount %></td>
      </tr>
    <% end %>
  </tbody>
</table>
