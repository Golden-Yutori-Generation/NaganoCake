 <div class="container">
    <div class="row mt-3">
     <div class="col-8">
       <h2 class="badge-light col-6 text-center">注文情報確認</h2>
     </div>
    </div>
    <div class="row mt-2">
      <div class="col-8 my-auto">
        <table class="table table-bordered">
          <thead class="table-secondary">
            <tr>
              <th>商品名</th>
              <th>単価（税込み）</th>
              <th>数量</th>
              <th>小計</th>
            </tr>
          </thead>
    　   <tbody>
          <% @cart_items.each do |cart_item| %>
            <% @total_price += cart_item.subtotal %>
            <tr>
              <td>
               <div class="row">
              <div class="col-3"><%= attachment_image_tag cart_item.item, :item_image ,size: '40x40'%></div>
              <div class="col-9 pl-2 pt-2"><%= cart_item.item.name %></div>
             </div>
            </td>
            <td class="pt-3"><%= cart_item.item.with_tax_price %></td>
            <td class="text-center">
              <%= form_with model: cart_item, local: true do |f| %>
               <%= f.select :amount, *[1..10] %>
              <% end %>
            </td>
            <td><%= cart_item.subtotal %></td>
          </tr>  
        <% end %>
      </tbody>
    </table>
    </div>
    <div class="col-4 my-auto">
    <table class="price-table">
      <tbody>
        <tr>
          <td width="100px" bgcolor="#DDDDDD">送料</td>
          <td width="100px">800</td>
        </tr>
        <tr>
          <td bgcolor="#DDDDDD">商品合計</td>
          <td><%= @total_price.to_s(:delimited) %></td>
        </tr>
        <tr>
          <td bgcolor="#DDDDDD">請求金額</td>
          <td><%= @total_price + 800 %></td>
        </tr>
      </tbody>
     </div>
    </table>
    </div>
  </div>

  <div class="row">
    <div class="add_place">
      <table class="add-table m-2">
        <tbody>
          <tr>
            <td width="100"><strong>支払方法</strong><br></td>
            <td width="600"><%= @order.payment_method_i18n %></td>
          </tr>
        </tbody>
      </table>
      <table class="add-table m-2">
        <tbody>
          <tr>
            <td width="100"><strong>お届け先</strong></td>
            <td width="600">〒 <%= @order.shipping_post_code %> <%= @order.shipping_address %> <br>
              <%= @order.shipping_name %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row mt-2">
    <div class="col-12 text-center">
      <div>
        <%= form_with model: @order, url:orders_path, method: :post, local: true do |f| %>
          <%= f.hidden_field :shipping_post_code, value: @order.shipping_post_code %>
          <%= f.hidden_field :shipping_address, value: @order.shipping_address  %>
          <%= f.hidden_field :shipping_name, value: @order.shipping_name %>
          <%= f.hidden_field :payment_method, value: @order.payment_method %>
          <%= f.hidden_field :billing_amount, value: @total_price + 800 %>
          <%= f.hidden_field :member_id, value: @order.member_id %>
          <%= f.submit "注文を確定する", class: "btn btn-success" %>
        <% end %>
      </div>
    </div>
 </div>
