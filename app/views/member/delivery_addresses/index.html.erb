<div class="container">
        <h4 class="pt-3">配送先登録/一覧</h4>
        <div id="error">
        <%= form_with model: @delivery_address, url: delivery_addresses_path, local: true do |f| %>
            <div class="delivery_addres col-xs-10">
                <div class="form-group col-xs-12">
                    <%= f.label :"郵便番号(ハイフンなし)", class: "col-xs-3 control-label" %>
                    <%= f.text_field :post_code, class: "col-xs-4 form-control-static postal_code" %>
                </div>

                <div class="form-group col-xs-12">
                    <%= f.label :"住所", class: "col-xs-3 control-label" %>
                    <%= f.text_field :address, class: "col-xs-7 form-control-static address" %>
                </div>

                <div class="form-group col-xs-12">
                    <%= f.label :"宛名", class: "col-xs-3 control-label" %>
                    <%= f.text_field :name, class: "col-xs-4 form-control-static name" %>
                </div>
                    <%= f.submit "新規登録", class: "col-xs-2 pull-right btn-lg btn-success" %>
            </div>
        <% end %>
        <!--<div id="create">-->
          <!-- render "delivery", delivery_addresses: @delivery_addresses -->
        <!--</div>-->
       
    <table class="table table-hover table-bordered mt-3">
      <thead>
          <tr>
              <th>郵便番号</th>
              <th>住所</th>
              <th>宛名</th>
              <th colspan="2"></th>
          </tr>
       </thead>

      <tbody>
        <% @delivery_addresses.each do |delivery_address| %>
          <tr class="delivery-tr" id="destroy-<%= delivery_address.id %>">
              <td>
                <%= delivery_address.post_code %>
              </td>
              <td>
                <%= delivery_address.address %>
              </td>
              <td>
                <%= delivery_address.name %>
              </td>
              <td>
                <%= link_to "編集する",edit_delivery_address_path(delivery_address.id), class: "glyphicon glyphicon-pencil btn-sm btn-primary" %>
              </td>
              <td>
                <%= link_to "削除する",delivery_address_path(delivery_address.id), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "glyphicon glyphicon-trash btn-sm btn-danger destroy_book_#{delivery_address.id}" %>
              </td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>