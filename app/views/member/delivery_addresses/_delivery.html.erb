<% if @delivery_addresses.present? %>
  <table class="table table-hover table-bordered">
    <thead>
        <tr class="info">
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th colspan="2"></th>
        </tr>
    </thead>

    <tbody>
      <% delivery_addresses.each do |delivery_address| %>
        <tr class="delivery-tr" id="destroy-<%= delivery_address.id %>">
            <td>
                <%= delivery_address.post_code %>
            </td>
            <td class="text-left">
                <%= delivery_address.address %>
            </td>
            <td class="text-left">
                <%= delivery_address.name %>
            </td>
            <td>
                <%= link_to "編集する",edit_member_delivery_address_path(delivery_address.id), class: "glyphicon glyphicon-pencil btn-sm btn-primary" %>
            </td>
            <td>
                <%= link_to "削除する",member_delivery_address_path(delivery_address.id), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, remote: true, class: "glyphicon glyphicon-trash btn-sm btn-danger destroy_book_#{delivery_address.id}" %>
            </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>