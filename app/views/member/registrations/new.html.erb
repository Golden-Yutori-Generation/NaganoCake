<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "member/shared/error_messages", resource: resource %>
　
　<div class="field">
　  <%= f.label :（姓）%><br />
　  <%= f.text_field :family_name, aoutofocus: true %>
　</div>
　
　<div class="field">
　  <%= f.label :（名）%><br />
　  <%= f.text_field :first_name, aoutofocus: true %>
　</div>
　
　<div class="field">
　  <%= f.label :（セイ）%><br />
　  <%= f.text_field :ruby_family_name, aoutofocus: true %>
　</div>
　
　<div class="field">
　  <%= f.label :（メイ）%><br />
　  <%= f.text_field :ruby_first_name, aoutofocus: true %>
　</div>
　
  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  
  <div class="field">
    <%= f.label :郵便番号（ハイフンなし） %><br />
    <%= f.text_field :post_code, aoutofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :住所 %><br />
    <%= f.text_field :address, aoutofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :電話番号（ハイフンなし） %><br />
    <%= f.text_field :phone_number, aoutofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（確認用） %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規会員登録" %>
  </div>
<% end %>

<h2>既に登録済みの方</h2>
<h4><%= render "member/shared/links" %>から新規登録を行ってください。</h4>
