<div>
  <%= attachment_image_tag @item, :item_image, :fill, 300, 300 %>
</div>

<h2><%= @item.name %></h2>
<div><%= @item.explanation %>
<div><strong>￥ <%= ( @item.no_tax_price * 1.1).floor.to_s(:delimited) %> 円</strong>(税込)</div>
</div>

<% if false %>
<div>
  <%= form_with model: @cart_items, local: true do |f| %>
    <%= f.hidden_field :item_id, value: @item.id %>
    <%= f.hidden_field :member_id, value: current_member.id %>
    <%= f.select :amount, *[1..10] %>
    <%= f.submit 'カートに入れる' %>
  <% end %>
</div>
<% end %>
