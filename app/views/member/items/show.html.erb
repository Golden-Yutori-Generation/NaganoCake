<div class="container-fluid">
  <div class="row ml-5 mt-5">
    <div class="col-4 ml-4 my-auto">
      <div>
        <%= attachment_image_tag @item, :item_image, :fill, 300, 300 %>
      </div>
    </div>
      <div class="col-6 ml-4 my-auto">
      <h2><strong><%= @item.name %></strong></h2>
      <p class="mt-2"><%= @item.explanation %>
      <div class="mt-4 mr-1"><span style="font-size:1.3em;"><strong>￥ <%= ( @item.no_tax_price * 1.1).floor.to_s(:delimited) %> 円</strong></span> (税込)</div>
      <div class="mt-3">
        <% if member_signed_in? %>
          <% if @item.is_active == false %>
            <%= form_with model: @cart_item, url: cart_items_path, local: true do |f| %>
              <%= f.hidden_field :item_id, value: @item.id %>
              <%= f.hidden_field :member_id, value: current_member.id %>
              <div>
                <%= f.select :amount, *[1..10], include_blank: "個数選択" %>
                <%= f.submit 'カートに入れる', class: "btn btn-success" %>
              </div>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>