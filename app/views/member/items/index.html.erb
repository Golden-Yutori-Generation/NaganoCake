<div class="container-fluid">
  <div class='row'>
    <div class='col-md-3'>
      <table class="table table-bordered x-2 mt-5">
        <%= render 'member/items/genretable', genres: @genres %>
      </table>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h3 class="row m-4">
        新着商品　　（全<%#= @items.count %>件）
      </h3>
      <div class="row">
        <div class="d-flex flex-wrap">
          <% @items.each do |item| %>
            <div class="m-3">
              <%=link_to  member_item_path(item) do %>
                <%= attachment_image_tag item, :item_image ,size: '170x170'%>
              <% end %>
              <p><%= item.name %></p>
              <p>¥<%= item.no_tax_price %></p>
            </div>
          <% end %>
        </div>
        <div class="text-center">
          <%= paginate @items %>
        </div>
      </div>
      </div>
    </div>
  </div>
</div>