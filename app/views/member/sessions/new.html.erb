<div class="container">
  <h2>ログイン</h2> </br>
 <div class="row">
   <div class="col-xs-offset-1 col-xs-11">
     <span class="bg-light">会員の方はこちらからログイン</span> </br></br>
   </div>
 </div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="row mb-3">
    <div class="col-6 col-md-4">
      <%= f.label :メールアドレス %>
    </div>
    <div class="col-md-8">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "text-field", size: "30x10" %>
    </div>
  </div>
 
  <div class="row md-3">
    <div class="col-6 col-md-4">
      <%= f.label :パスワード %>
    </div>
    <div class="col-md-8">
      <%= f.password_field :password, autocomplete: "current-password", class: "text-field", size: "30x10" %>
    </div>
  </div></br>
 
  <div class="row md-3">
  <% if devise_mapping.rememberable? %>
  <div class="col-6 col-md-4"></div>
    <div class="col-md-8">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
  </div>
  
  <div class="row mb-3">
      <div class="col-6 col-md-4"></div>
      <div class="col-md-8">
        <%= f.submit "ログイン", class: "btn btn-success" %>
      </div>
      
  <% end %>
  <%= flash[:error] %>
  
  <div><br>
    <span>会員登録がお済みではない方</span>
    <p><%= render "member/shared/links" %></p>
  </div>



</div>