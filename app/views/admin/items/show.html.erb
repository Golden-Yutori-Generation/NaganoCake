<div class="container-fluid">

  <div class="row ml-5 mt-5">
    <h2 class="ml-3 badge-light">商品一覧</h2>
  </div>
</div>

<div class="container-fluid">
  <div class="row ml-5 mt-5">
    <div class="col-4 my-auto">
      <div>
        <%= attachment_image_tag @item, :item_image, :fill, 300, 300 %>
      </div>
    </div>
    <div class="col-6 my-auto">
      <table>
        <tbody>
          <tr>
            <td>商品名</td>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td><%= @item.explanation %></td>
          </tr>
          <tr>
            <td>ジャンル</td>
            <td><%= @item.genre.name %></td>
          </tr>
            <td>税込価格(税別価格)</td>
            <td>
              <%= ( @item.no_tax_price * 1.1).floor.to_s(:delimited) %>
              (<%= ( @item.no_tax_price).to_s(:delimited) %>) 円
            </td>
          </tr>
          <tr>
            <td>販売ステータス</td>
            <% if @item.is_active == false %>
              <td class="text-succe font-weight-bold">販売中</td>
            <% else %>
              <td class="text-secondary font-weight-bold">販売停止中</td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  
  <div>  
    <div class="text-center">
      <%= link_to '編集する', edit_admin_item_path(@item), class: "btn btn-success" %>
    </div>
  </div>
</div>

