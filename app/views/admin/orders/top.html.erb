<div class="container-fluid">
  <div class="row ml-5 mt-5">
    <div class="col-3 text-center">
      <h2 class="ml-3 badge-light">注文履歴一覧</h2>
    </div>
　</div>
</div>

<div class="container-fluid">
  <div class="row mx-5 mt-5 d-flex justify-content-center align-items-center">
    <div class="col-12">
      <table class="table table-hover table-inverse ">
        <thead class="table-secondary">
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td>
                <%= link_to admin_order_path(order) do %>
                  <%= l order.created_at, format: :default %>
                <% end %>
              </td>
              <td>
                <%= order.member.family_name %>
                <%= order.member.first_name %>
              </td>
              <td class="pl-4">
                <% order.ordered_items.each do |ordered_item| %>
                <% @total_amount += ordered_item.amount %>
                <% end %>
                <%= @total_amount %>
              </td>
              <td><%= order.order_status_i18n %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="text-center">
        <%= paginate @orders %>
      </div>
    </div>
  </div>
</div>
