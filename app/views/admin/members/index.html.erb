<div class="container-fluid">
  <div class="row ml-5 mt-5">
    <div class="col-3 text-center">
      <h2 class="ml-3 badge-light">会員一覧</h2>
    </div>
　</div>
</div>

<div class="container-fluid">
  <div class="row mx-5 mt-5 d-flex justify-content-center align-items-center">
    <div class="col-12">
      <table class="table table-hover table-inverse ">
        <thead class="table-secondary">
          <th>会員ID</th>
          <th>会員名</th>
          <th>メールアドレス</th>
          <th>会員ステータス</th>
        </thead>
        <tbody>
          <% @members.each do |member| %>
            <tr>
              <td><%= member.id %></td>
              <td>
                <%= link_to admin_member_path(member) do %>
                  <%= member.full_name %>
                <% end %>
              </td>
              <td><%= member.email %></td>
              <% if member.member_status == false %>
                <td>有効</td>
              <% else %>
                <td>退会</td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="text-center">
        <%= paginate @members %>
      </div>
    </div>
  </div>
</div>
