<h1>会員一覧</h1>

<table>
  <thead>
    <tr>
      <th>会員ID</th>
      <th>会員名</th>
      <th>メールアドレス</th>
      <th>会員ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.id %></td>
        <td>
        <%= link_to admin_member_path(member) do %>
          <%= member.full_name %>
        <% end %>
        </td>
        <td><%= member.email %></td>
        <% if member.member_status == false %>
          <td>有効</td>
        <% else %>
          <td>退会</td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @members %>