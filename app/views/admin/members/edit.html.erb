<h1><%= @member.family_name %>さんの会員情報編集</h1>

<%= form_with model: @member, url: admin_members_path(@member), local: true do |f| %>
  <p>会員ID</p>
  <%= f.text_field :member_id %>
  <p>氏名</p>
  <%= f.text_field :family_name %>
  <%= f.text_field :first_name %>
  <p>フリガナ</p>
  <%= f.text_field :ruby_family_name %>
  <%= f.text_field :ruby_first_name %>
  <p>郵便番号</p>
  <%= f.text_field :post_code %>
  <p>住所</p>
  <%= f.text_field :address %>
  <p>電話番号</p>
  <%= f.text_field :phone_number %>
  <p>メールアドレス</p>
  <%= f.text_field :email %>
  <p>会員ステータス</p>
  <% if @member.member_status == false %>
    <p>有効</p>
  <% else %>
    <p>退会</p>
  <% end %>
  <%= f.submit '変更を保存' %>
<% end %>