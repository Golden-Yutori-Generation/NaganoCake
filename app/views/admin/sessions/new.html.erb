<div class="container-fluid">
  <div class="row ml-5 mt-5">
    <h2 class="ml-3 badge-light">管理者ログイン</h2>
  </div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="row m-4 text-center">
        <div class="col-4"><%= f.label :メールアドレス %></div>
        <div class="col-5"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
    　</div>

      <div class="row m-4 text-center">
        <div class="col-4"><%= f.label :パスワード %></div>
        <div class="col-5"><%= f.password_field :password, autocomplete: "current-password" %></div>
     </div>



    <div class="actions text-center">
      <%= f.submit "ログイン",class: "btn btn-primary" %>
    </div>
  <% end %>

<%= render "admin/shared/links" %>

