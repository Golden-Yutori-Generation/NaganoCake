<div class="container-fluid">
  
  <div class="row ml-5 mt-5">
    <h2 class="ml-3 badge-light">ジャンル一覧・追加</h2>
  </div>
  
  <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
    <div class="row m-4 text-center">
      <div class ="mx-4 my-auto"><%= f.label :ジャンル名 %></div>
      <div class ="mx-4 my-auto"><%= f.text_field :name, placeholder: "ジャンル名" %></div>
      <div class ="mx-4 my-auto"><%= f.submit '新規登録', class: "btn btn-success"  %></div>
    </div>
  <% end %>

  <div class="col-lg-4">
    <table class="table table-hover table-inverse">
      <thead class="table-secondary">
        <th class="text-center">ジャンル</th>
        <th></th>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to '編集する', edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>