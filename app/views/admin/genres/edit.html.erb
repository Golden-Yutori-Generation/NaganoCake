<div class="container-fluid">
 <div class="row ml-5 mt-5">
   <h2 class="ml-3 badge-light ">ジャンル編集</h2>
  </div>

  <%= form_with model: @genre, url: admin_genre_path, local: true do |f| %>
    <div class="row m-4 text-center">
      <div class="mx-4 my-auto"><%= f.label :ジャンル名 %></div>
      <div class="mx-4 my-auto"><%= f.text_field :name %></div>
      <div class="mx-4 my-auto"><%= f.submit '変更を保存', class: "btn btn-success" %></div>
    </div>
  <% end %>
</div>
